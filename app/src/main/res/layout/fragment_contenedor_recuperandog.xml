<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contenedor_Fragment">



    <LinearLayout
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="bottom"
            android:gravity="center"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                >



                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.50"
                    android:foregroundGravity="bottom"
                    android:gravity="center"
                    android:outlineAmbientShadowColor="@color/black"
                    android:outlineSpotShadowColor="@color/colorPrimary"
                    android:id="@+id/btn_comprarPlaca"
                    android:background="@drawable/rounded_button"
                    android:drawableStart="@drawable/ic_compra_de_placa"
                    android:padding="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="8dp"
                    android:singleLine="false"
                    android:text="@string/Comprar_Placa"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textSize="20sp"
                    android:textStyle="normal" />





                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.50"
                    android:foregroundGravity="bottom"
                    android:gravity="center"
                    android:id="@+id/btn_ampliarVigencia"
                    android:background="@drawable/rounded_button"
                    android:drawableStart="@drawable/ic_ampliacion_de_vigencia"
                    android:padding="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="8dp"
                    android:shadowColor="@color/azul_caminandog"
                    android:singleLine="false"
                    android:text="@string/Ampliar_Vigencia"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/azul_caminandog"
                    android:textSize="20sp"
                    android:textStyle="normal" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="bottom"
            android:gravity="center"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >



                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.50"
                    android:foregroundGravity="bottom"
                    android:gravity="center"
                    android:outlineAmbientShadowColor="@color/black"
                    android:outlineSpotShadowColor="@color/colorPrimary"
                    android:id="@+id/btn_leer_code"
                    android:background="@drawable/rounded_button_grey_recuperandog"
                    android:drawableStart="@drawable/ic_img_codigoleer"
                    android:padding="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="8dp"
                    android:singleLine="false"
                    android:text="@string/Leer_Código"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/white"
                    android:textSize="20sp"
                    android:textStyle="normal" />







                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.50"
                    android:foregroundGravity="bottom"
                    android:gravity="center"
                    android:id="@+id/btn_vincular_placa"
                    android:background="@drawable/rounded_button_grey_recuperandog"
                    android:drawableStart="@drawable/ic_img_placav"
                    android:padding="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="8dp"
                    android:shadowColor="@color/azul_caminandog"
                    android:singleLine="false"
                    android:text="@string/Vincular_Placa"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/azul_caminandog"
                    android:textSize="20sp"
                    android:textStyle="normal" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="bottom"
            android:gravity="center"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_grey_recuperandog"
                android:padding="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:orientation="horizontal"
                android:id="@+id/btn_datosrecup"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_datos_personales"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"

                    >

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    >
                    <TextView
                        android:outlineAmbientShadowColor="@color/black"
                        android:outlineSpotShadowColor="@color/colorPrimary"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Datos_para_contacto"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textStyle="normal"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Escribe_tu_información"
                        android:textAllCaps="false"
                        android:textColor="@color/gris_texto"
                        android:textColorHighlight="@color/azul_caminandog"
                        android:textSize="12sp"
                        android:textStyle="normal"></TextView>


                </LinearLayout>




            </LinearLayout>


        </LinearLayout>







        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:shadowColor="@color/black"
            android:text="@string/Mascotas_con_placa"

            android:textColor="@color/black"
            android:textSize="18sp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recper_recup_recup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"


             />




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>