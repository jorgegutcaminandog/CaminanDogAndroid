<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/txtNumExterior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:fontFamily="sans-serif-condensed-medium"
            android:hint="@string/Numero_Exterior"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/txtNumInterior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="sans-serif-condensed-medium"
            android:hint="@string/Numero_Interior"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/txtCalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:fontFamily="sans-serif-condensed-medium"
            android:hint="@string/Calle"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/txtMunicipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:fontFamily="sans-serif-condensed-medium"
            android:hint="@string/Municipio_o_Delegacion"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/txtEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:fontFamily="sans-serif-condensed-medium"
            android:hint="@string/Estado"
            android:paddingLeft="15dp" />

        <EditText
            android:id="@+id/txtCP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:fontFamily="sans-serif-condensed-medium"
            android:hint="@string/Codigo_Postal"
            android:paddingLeft="15dp" />

        <Button
            android:id="@+id/btnEnviarDatos"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            android:backgroundTint="@color/colorPrimary"
            android:drawableRight="@drawable/ic_arrow_right_black"
            android:paddingLeft="40dp"
            android:paddingRight="20dp"
            android:text="@string/Continuar"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
