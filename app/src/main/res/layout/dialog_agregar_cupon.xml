<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="50dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">




    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:paddingTop="50dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <LinearLayout
            android:id="@+id/linear_direcc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/canceld_cod"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_weight="0.25"
                        android:background="#00FFFFFF"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text="@string/CANCELAR"
                        android:textAllCaps="false"
                        android:textColor="@color/azul_texto_btn"
                        android:textSize="15sp"
                        tools:layout_editor_absoluteX="115dp"
                        tools:layout_editor_absoluteY="410dp" />


                    <TextView
                        android:id="@+id/txt_edit_member_casa"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.50"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/Agregar_codigo"
                        android:textColor="@color/colorAccent"
                        android:textColorLink="@color/colorAccent"
                        android:textSize="15sp" />

                    <Button

                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.25"
                        android:background="#00FFFFFF"
                        android:gravity="center|right"
                        android:paddingRight="10dp"
                        android:text="@string/Guardar"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        tools:layout_editor_absoluteX="115dp"
                        tools:layout_editor_absoluteY="410dp" />
                </LinearLayout>


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingTop="5dp"
                    android:shadowColor="@color/black"
                    android:text="@string/Ingresa_el_codigo_del_cupon"
                    android:paddingLeft="5dp"
                    android:textColor="@color/azul_caminandog"
                    android:textSize="20sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    >






                    <EditText
                        android:id="@+id/añadir_txt_dialog"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.70"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="25sp"
                        />

                    <Button
                        android:id="@+id/añadir_btn_dialog"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:background="@drawable/rounded_button"
                        android:text="@string/Añadir"
                        android:textAllCaps="false"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        />
                </LinearLayout>





            </LinearLayout>


        </LinearLayout>

        <Space
            android:layout_width="200dp"
            android:layout_height="500dp"/>

        <TextView
            android:paddingBottom="8dp"
            android:paddingTop="5dp"
            android:shadowColor="@color/black"
            android:text="@string/Los_cupones_de_paseos_gratis_generaran_un_cargo_temporal_que_seran_reembolsados"
            android:paddingLeft="5dp"
            android:textColor="@color/gray_text_box"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />



    </androidx.cardview.widget.CardView>








</androidx.constraintlayout.widget.ConstraintLayout>