<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:outlineAmbientShadowColor="@color/black"
    android:outlineSpotShadowColor="@color/black"
    app:contentPadding="5dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="-10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:id="@+id/cardPipiPopo">



    <LinearLayout
        android:layout_gravity="top"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgPerro"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtNombrePerro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:text="@string/Nombre"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/txtNumPipi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:clickable="true"
            android:drawableRight="@drawable/ic_pipi_usuario"
            android:gravity="center"
            android:text="000"
            android:textSize="17sp"
            android:textStyle="normal" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05" />

        <TextView
            android:id="@+id/txtNumPopo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:clickable="true"
            android:drawableRight="@drawable/ic_popo_usuario"
            android:gravity="center"
            android:text="000"
            android:textSize="17sp"
            android:textStyle="normal" />


    </LinearLayout>



</androidx.cardview.widget.CardView>